@model UserLoggingIn
@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-6 offset-2">
        <p>
            <h3>Sign in</h3>
        </p>
        @if (TempData["Error"] != null)
        {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b>  @TempData["Error"]</span>
                </div>
        }
        <div class="row">
            <div class="col-md-6">
                <form asp-action="SignUp">
                    <div class="form-group py-2">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control blog-post-title" placeholder="email*"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group py-2" >
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control blog-post-title" placeholder="password*" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-end right" type="submit" value="Log in"/>
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>