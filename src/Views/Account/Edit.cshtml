@model AppUser

@{
    ViewData["Title"] = $"Edit {Model.UserName}";
}

<h3>Edit my profile</h3>

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" value="@Model.Id"/>
    <div class="form-group py-2">
        <label asp-for="UserName">Nickname</label>
        <input asp-for="UserName" class="form-control blog-post-title" placeholder="nickname" value ="@Model.UserName"/>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
     <div class="form-group py-2">
        <label asp-for="PhotoUrl">Photo</label>
        <input asp-for="PhotoUrl" class="form-control blog-post-title" placeholder="photo" value="@Model.PhotoUrl" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
    <button type="submit" class="btn btn-primary  float-end right">Save Changes</button>
</form>