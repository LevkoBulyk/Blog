@model UserRegistration

@{
    ViewData["Title"] = "Regitration";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h3>Create your account</h3>
        </p>
        @if (TempData["Error"] != null)
        {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b>  @TempData["Error"]</span>
                </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div class="form-group py-2">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control blog-post-title" placeholder="email*"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group py-2" >
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control blog-post-title" placeholder="password*" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group py-2" >
                        <label asp-for="ConfirmPassword">Confirm password</label>
                        <input asp-for="ConfirmPassword" class="form-control blog-post-title" placeholder="confirm password*" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group py-2" >
                        <label asp-for="Name">Nickname</label>
                        <input asp-for="Name" class="form-control blog-post-title" placeholder="nickname" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group py-2" >
                        <label asp-for="PhotoUrl">Image</label>
                        <input asp-for="PhotoUrl" class="form-control blog-post-title" placeholder="URL to your photo" />
                        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-end right" type="submit" value="Register"/>
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>