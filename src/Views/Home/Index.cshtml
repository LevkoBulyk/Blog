@model List<Article>;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Articles</h1>
</div>

<div class="container">
    @foreach (var item in Model)
    {
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <h3 class="mb-0">
                        <a asp-controller="Article" asp-action="Detail" asp-route-id="@item.Id" class="text-dark" >@item.Title</a>
                    </h3>
                    <div class="mb-1 text-muted">@item.LastEdition</div>
                    <p class="card-text mb-auto">
                    @item.Abstract
                    </p>
                    <a asp-controller="Article" asp-action="Detail" asp-route-id="@item.Id" >Read article</a>
                </div>
                <img class="px-3 py-3 card-img-right flex-auto d-none d-md-block" src="@item.ImageUrl"/>
            </div>
    }
</div>
